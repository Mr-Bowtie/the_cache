<form action="/create_file" method="post">
  <div class="field">
    <label class="label" for="type">Entry Type</label>
    <div class="control select is-medium">
      <select name="type" id="type-select">
        <option value="">--Choose the entry type--</option>
        <% ['adventure_logs', 'npcs', 'locations'].each do |record| %>
          <option value="<%= record %>"><%= record %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="field">
    <label class="label" for="title">Title</label>
    <div class="control">
      <input class="input is-medium" type="text" name="title">
    </div>
  </div>
  <div class="field">
    <label class="label" for="content">Content</label>
    <div class="control">
      <textarea id="editor" name="content">
      </textarea>
    </div>
  </div>
  <input class="button mt-3" type="submit" value="Save">
</form>
<script>
  tinymce.init({
    selector: '#editor'
  });
</script>
